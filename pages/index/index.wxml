<!--index.wxml-->

<view style="margin-top:80px;margin:0 auto;width:100%;">
<form bindsubmit="formBindsubmit" bindreset="formReset">
   <view class="section" style="height:85px;background-color:#ffffff;">
     <view style="height:30px;"></view>
     <view class="section_left">
         <button type="primary" size="mini" plain="plain" bindtap="newClass" bindinput="bindData" style="width:100%;background-color:#54b33b;color:#ffffff;"  hover-class="other-button-hover" > 学校班级 </button>
     </view>
     <view class="section_right">
         <button type="primary" size="mini" plain="plain" bindtap="newTeam" style="margin-left:2px;width:100%;border:1px solid #7a7a7a;color:#7a7a7a;" hover-class="other-button-hover" > 团队组织 </button>
     </view>
   </view>  
   
   <view style="width:100%;height:1.5px;background-color:#f1f0f5;"></view>
   <view class="section" style="line-height:30px;height:40px;padding-top:16px;">
            <text style="float:left;margin-right:40px;">学校</text><input  type="text" name="school" value="{{school}}" placeholder="北京市朝阳外国语" style="float:left;margin-top:2px;" />
   </view>
   <view style="width:100%;height:1.5px;background-color:#f1f0f5;"></view>
   
   <view class="section" style="line-height:30px;height:40px;padding-top:16px;">
      <text style="float:left;margin-right:40px;">年级</text><input  type="text"  name="grade" value="{{grade}}" placeholder="一年级" style="float:left;margin-top:2px;" />
   </view>
   <view style="width:100%;height:1.5px;background-color:#f1f0f5;"></view>
   <view class="section" style="line-height:30px;height:40px;padding-top:16px;">
      <text style="float:left;margin-right:40px;">班级</text><input type="text"  name="classes" value="{{classes}}" placeholder="2" style="float:left;margin-top:2px;" />
   </view>
   <view style="width:100%;height:14px;background-color:#f1f0f5;"></view>
   
   <view class="section" style="line-height:30px;height:40px;padding-top:16px;">
      <text style="float:left;margin-right:40px;">我是</text><input type="text"  name="username" value="{{username}}" placeholder="我是语文老师" style="float:left;margin-top:2px;" />
   </view>
   <view style="width:100%;height:1.5px;background-color:#f1f0f5;"></view>
   <view class="section" style="line-height:30px;height:40px;padding-top:16px;">
      <text style="float:left;margin-right:40px;">我是班主任</text><switch name="teacher" checked="{{teacher}}" style="float:right;" />
   </view>
   <view style="width:80%;height:100%;background-color:#f1f0f5;margin:0 auto;margin-top:30px;">
         <button type="primary" size="default" plain="false" formType="submit" style="background-color:#54b33b;color:#ffffff;"> 创建班级 </button>
   </view>
</form>
</view>
  
  
 
